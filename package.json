{
  "name": "svelte-derver-starter",
  "version": "0.1.2",
  "description": "SvelteJS client and Derver server starter, bundeled with ESBuild",
  "main": "index.js",
  "scripts": {
    "build": "node esbuild",
    "pkg:build": "cd package && node esbuild",
    "dev": "node --enable-source-maps esbuild --dev",
    "docker:build": "./docker/build.sh",
    "docker:dev": "docker rm --force DoConvert && docker run --name DoConvert -p 3000:3000 -v $(pwd):/app doconvert:latest npm run dev",
    "prestart": "npm run build",
    "start": "cd dist && node app",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "svelte",
    "sveltejs",
    "esbuild",
    "derver",
    "starter"
  ],
  "author": "Alexey Schebelev",
  "license": "MIT",
  "devDependencies": {
    "derver": "^0.4.12",
    "esbuild": "^0.8.34",
    "esbuild-svelte": "^0.4.0",
    "esbuild-svelte-paths": "^0.1.3",
    "multiparty": "^4.2.2",
    "node-watch": "^0.7.1",
    "svelte": "^3.31.2"
  },
  "dependencies": {}
}
